# chrispwd's .cwmrc

sticky      yes
snapdist    4
moveamount  35
borderwidth 2
gap         35 35 35 35
vtile       50
htile       50
unbind-key  all

fontname "monospace:style=Italic:size=12"

# groups
bind-key 4-1   group-only-1
bind-key 4-2   group-only-2
bind-key 4-3   group-only-3
bind-key 4-4   group-only-4
bind-key 4-5   group-only-5
bind-key 4-6   group-only-6
bind-key 4-7   group-only-7
bind-key 4-8   group-only-8
bind-key 4-9   group-only-9
bind-key 4C-1  group-toggle-1
bind-key 4C-2  group-toggle-2
bind-key 4C-3  group-toggle-3
bind-key 4C-4  group-toggle-4
bind-key 4C-5  group-toggle-5
bind-key 4C-6  group-toggle-6
bind-key 4C-7  group-toggle-7
bind-key 4C-8  group-toggle-8
bind-key 4C-9  group-toggle-9
bind-key 4S-1  window-movetogroup-1
bind-key 4S-2  window-movetogroup-2
bind-key 4S-3  window-movetogroup-3
bind-key 4S-4  window-movetogroup-4
bind-key 4S-5  window-movetogroup-5
bind-key 4S-6  window-movetogroup-6
bind-key 4S-7  window-movetogroup-7
bind-key 4S-8  window-movetogroup-8
bind-key 4S-9  window-movetogroup-9

# keybinds
bind-key M-Tab    window-cycle
bind-key MS-Tab   window-rcycle
bind-key M-grave  window-cycle-inclass
bind-key MS-grave window-rcycle-inclass
bind-key 4-Tab    group-cycle
bind-key 4S-Tab   group-rcycle
bind-key 4M-m     window-maximize
bind-key 4MS-m    window-maximize
bind-key 4M-v     window-vmaximize
bind-key 4MS-v     window-vtile
bind-key 4M-g     window-hmaximize
bind-key 4MS-g     window-htile
bind-key 4M-f     window-fullscreen
bind-key 4-w      window-close
bind-key 4-s      window-stick
bind-key 4S-z     window-hide
bind-key 4S-f     window-freeze
bind-key 4-m      menu-window
bind-key 4-z      menu-window-hidden
bind-key 4-d      menu-cmd
bind-key 4S-r     restart
bind-key 4S-q     quit

# window movement
bind-key 4-h    window-move-left
bind-key 4-j    window-move-down
bind-key 4-k    window-move-up
bind-key 4-l    window-move-right
bind-key 4S-h   window-move-left-big
bind-key 4S-j   window-move-down-big
bind-key 4S-k   window-move-up-big
bind-key 4S-l   window-move-right-big
bind-key 4C-h   window-snap-left
bind-key 4C-j   window-snap-down
bind-key 4C-k   window-snap-up
bind-key 4C-l   window-snap-right

# window resize
bind-key 4MS-h   window-resize-left-big
bind-key 4MS-j   window-resize-down-big
bind-key 4MS-k   window-resize-up-big
bind-key 4MS-l   window-resize-right-big
bind-key 4M-h    window-resize-left
bind-key 4M-j    window-resize-down
bind-key 4M-k    window-resize-up
bind-key 4M-l    window-resize-right

# mousebinds
unbind-mouse all
bind-mouse 4-3  window-resize
bind-mouse 4-1  window-move
bind-mouse 4S-1 window-lower

# other
ignore       polybar
ignore       tint
ignore       MEGAsync
ignore       trayer
ignore       xclock
ignore       xosview
autogroup    4 "keepassxc","KeePassXC"
autogroup    2 "Navigator","firefox"
autogroup    3 "signal","Signal"
autogroup    0 "megasync","MEGAsync"
autogroup    0 "xclock", "XClock"
autogroup    0 "xosview", "XOsview"
autogroup    0 "panel","trayer"

