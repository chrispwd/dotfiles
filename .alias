# Use $XINITRC variable if file exists.
[ -f "$XINITRC" ] && alias startx="ssh-agent startx $XINITRC"

# run sudo without typing it for these programs
for x in pacman mount umount tlp-stat systemctl journalctl; do
  alias $x="sudo $x"
done

# Colorize commands when possible.
alias \
  cp="cp -iv" \
  mv="mv -iv" \
  rm="rm -vI" \
  mkd="mkdir -pv" \
  cls="clear" \
  ls="ls --color=auto" \
  la="ls -A" \
  ll="ls -Al" \
  lsd="lsd -h --color auto --group-dirs first" \
  grep="grep --color=auto" \
  diff="diff --color=auto" \
  ccat="highlight --out-format=ansi" \
  bat="bat --theme='ansi' --color=always"

# Common commands
alias \
  ka="killall" \
  shutdown="shutdown -h now" \
  lsda="lsd -A" \
  lsdal="lsd -Al" \
  lsdt="lsd --tree" \
  pfetch="PF_INFO='ascii title os host kernel uptime pkgs memory palette' pfetch" \
  wp="sxiv ~/Sync/Resources/wallpapers" \
  mkdir="mkdir -p" \
  scr="scrot '%Y%m%dT%H%M%S--screenshot.png' -e 'mv \$f \$\$SCROTS'" \
  scrs="scrot '%Y%m%dT%H%M%S--screenshot.png' -e 'mv \$f \$\$SCROTS' -s" \
  za="zathura" \
  v="vim" \
  iv="sxiv" \
  nf="neofetch" \
  e="emacsclient -nw" \
  el="emacslauncher"
