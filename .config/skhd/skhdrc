ctrl + cmd + alt - b : open -na /Applications/Google\ Chrome.app
ctrl + cmd + alt - e : ~/.local/bin/emacslauncher
ctrl + cmd + alt - d : /usr/local/bin/emacs --init-directory $HOME/.config/mimemacs --daemon
ctrl + cmd + alt - c : /usr/local/bin/emacsclient -c
ctrl + cmd + alt - f : open -a /Applications/Firefox.app
