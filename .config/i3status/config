# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_good = "#8c9440"
        color_degraded = "#707880"
        color_bad = "#a54242"
        separator = "|"
}

order += "battery 0"
order += "battery 1"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
# order += "ipv6"
# order += "ethernet _first_"
# order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "%essid %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        path = "/sys/class/power_supply/BAT%d/uevent"
        format = "%status0: %percentage"
        threshold_type = pecentage
        low_threshold = 20
}

battery 1 {
        path = "/sys/class/power_supply/BAT%d/uevent"
        format = "%status1: %percentage"
        threshold_type = pecentage
        low_threshold = 20
}

cpu_usage {
        format = "CPU: %usage"
        degraded_threshold = 90
        max_threshold = 95
}

disk "/" {
        format = "HD: %avail/%total (%percentage_used)"
}

load {
        format = "%1min"
}

memory {
        format = "MEM: %used/%available (%percentage_used)"
        threshold_degraded = "2G"
        format_degraded = "MEM < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
